<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rugby_terrain">

    <ImageView
        android:id="@+id/p1r"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/p1r" />

    <ImageView
        android:id="@+id/p2r"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/p3r"
        android:layout_marginTop="28dp"
        android:layout_toEndOf="@+id/p1r"
        android:layout_toRightOf="@+id/p1r"
        android:contentDescription="@string/app_name"
        android:src="@drawable/p2r" />

    <ImageView
        android:id="@+id/p3r"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/p1r"
        android:layout_toEndOf="@+id/p2r"
        android:layout_toRightOf="@+id/p2r"
        android:contentDescription="@string/app_name"
        android:src="@drawable/p3r" />

    <ImageView
        android:id="@+id/p4r"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/p1r"
        android:layout_alignStart="@+id/p1r"
        android:layout_below="@+id/p1r"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/p4r" />

    <ImageView
        android:id="@+id/p5r"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/p8r"
        android:layout_marginBottom="11dp"
        android:layout_toEndOf="@+id/p2r"
        android:layout_toRightOf="@+id/p2r"
        android:contentDescription="@string/app_name"
        android:src="@drawable/p5r" />

    <ImageView
        android:id="@+id/p6r"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/p4r"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_toLeftOf="@+id/p7r"
        android:layout_toStartOf="@+id/p7r"
        android:contentDescription="@string/app_name"
        android:src="@drawable/p6r" />

    <ImageView
        android:id="@+id/p7r"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/p8r"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/p4r"
        android:layout_toRightOf="@+id/p4r"
        android:contentDescription="@string/app_name"
        android:src="@drawable/p7r" />

    <ImageView
        android:id="@+id/p8r"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/p4r"
        android:layout_toEndOf="@+id/p7r"
        android:layout_toRightOf="@+id/p7r"
        android:contentDescription="@string/app_name"
        android:src="@drawable/p8r" />

    <ImageView
        android:id="@+id/p9r"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/p7r"
        android:layout_toRightOf="@+id/p7r"
        android:contentDescription="@string/app_name"
        android:src="@drawable/p9r" />

    <ImageView
        android:id="@+id/p10r"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/p12r"
        android:layout_marginBottom="36dp"
        android:layout_toEndOf="@+id/p9r"
        android:layout_toRightOf="@+id/p9r"
        android:contentDescription="@string/app_name"
        android:src="@drawable/p10r" />

    <ImageView
        android:id="@+id/p11r"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/p15r"
        android:layout_alignLeft="@+id/p6r"
        android:layout_alignStart="@+id/p6r"
        android:contentDescription="@string/app_name"
        android:src="@drawable/p11r" />

    <ImageView
        android:id="@+id/p12r"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/p11r"
        android:layout_marginBottom="63dp"
        android:layout_toEndOf="@+id/p10r"
        android:layout_toRightOf="@+id/p10r"
        android:contentDescription="@string/app_name"
        android:src="@drawable/p12r" />

    <ImageView
        android:id="@+id/p13r"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/p11r"
        android:layout_toEndOf="@+id/p12r"
        android:layout_toRightOf="@+id/p12r"
        android:contentDescription="@string/app_name"
        android:src="@drawable/p13r" />

    <ImageView
        android:id="@+id/p14r"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/p13r"
        android:contentDescription="@string/app_name"
        android:src="@drawable/p14r" />

    <ImageView
        android:id="@+id/p15r"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/p10r"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/p10r"
        android:contentDescription="@string/app_name"
        android:src="@drawable/p15r" />


</RelativeLayout>